@model DemoMVC.Models.Person

@{
    ViewData["Title"] = "Create";
    bool isFirstPerson = ViewBag.IsFirstPerson ?? false;
}

<h2>Thêm mới Person</h2>

<form asp-action="Create" method="post">
    @if (isFirstPerson)
    {
        <div class="form-group">
            <label asp-for="PersonId"></label>
            <input asp-for="PersonId" class="form-control" />
        </div>
    }
    else
    {
        <input type="hidden" asp-for="PersonId" />
    }

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">← Quay về danh sách</a>
</form>
